# Database
DATABASE_URL="postgresql://user:password@localhost:5432/minalesh?schema=public"

# JWT Secret for authentication
JWT_SECRET="your-secret-key-change-in-production"
JWT_EXPIRES_IN="7d"
REFRESH_TOKEN_EXPIRES_IN="30d"

# Email Service Configuration (for transactional emails)
# Resend is the recommended provider: https://resend.com
EMAIL_FROM="noreply@minalesh.et"
RESEND_API_KEY="re_..."  # Get from https://resend.com/api-keys

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# AWS S3 Configuration (Optional - for media storage)
# If not configured, media will be stored locally in public/uploads
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_S3_BUCKET=""
AWS_REGION="us-east-1"

# Observability - Sentry Error Tracking (Optional)
# Get your DSN from https://sentry.io
# SENTRY_DSN="your-sentry-dsn"
# NEXT_PUBLIC_SENTRY_DSN="your-sentry-dsn"
# SENTRY_ORG="your-org"
# SENTRY_PROJECT="your-project"
# SENTRY_AUTH_TOKEN="your-auth-token"
# SENTRY_ENABLED="false"

# Logging
# Options: trace, debug, info, warn, error, fatal
LOG_LEVEL="info"

# Redis Caching (Optional - falls back to in-memory cache if not configured)
# REDIS_URL="redis://localhost:6379"
# REDIS_TLS_ENABLED="false"

# Payment Providers
# Stripe (for online payments)
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."

# Payment webhook security
PAYMENT_WEBHOOK_SECRET="your-webhook-secret"
TELEBIRR_WEBHOOK_SECRET="your-telebirr-secret"
CBE_WEBHOOK_SECRET="your-cbe-secret"
AWASH_WEBHOOK_SECRET="your-awash-secret"

# Cron Jobs
# Secret for authenticating scheduled tasks
CRON_SECRET="your-cron-secret"

# Internal API
# Secret for internal service-to-service calls
INTERNAL_API_SECRET="your-internal-secret"

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/minalesh?schema=public"

# JWT Secret for authentication
JWT_SECRET="your-secret-key-change-in-production"
JWT_EXPIRES_IN="7d"
REFRESH_TOKEN_EXPIRES_IN="30d"

# Email Service Configuration (Optional - for transactional emails)
# Configure with your email service provider (SendGrid, AWS SES, Mailgun, etc.)
# EMAIL_SERVICE_PROVIDER="sendgrid"
# EMAIL_FROM="noreply@minalesh.et"
# SENDGRID_API_KEY="your-sendgrid-api-key"

# Application
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# AWS S3 Configuration (Optional - for media storage)
# If not configured, media will be stored locally in public/uploads
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_S3_BUCKET=""
AWS_REGION="us-east-1"

# Observability - Sentry Error Tracking (Optional)
# Get your DSN from https://sentry.io
# SENTRY_DSN="your-sentry-dsn"
# NEXT_PUBLIC_SENTRY_DSN="your-sentry-dsn"
# SENTRY_ORG="your-org"
# SENTRY_PROJECT="your-project"
# SENTRY_AUTH_TOKEN="your-auth-token"
# SENTRY_ENABLED="false"

# Logging
# Options: trace, debug, info, warn, error, fatal
LOG_LEVEL="info"
